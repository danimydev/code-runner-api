{
  "imports": {
    "oak": "https://deno.land/x/oak@v12.5.0/mod.ts"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-run --allow-read --allow-write ./src/index.ts",
    "dev": "deno run --watch --allow-net --allow-run --allow-read --allow-write ./src/index.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts"
    ]
  }
}